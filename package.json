{
  "name": "ordem-servico",
  "version": "1.0.0",
  "description": "Aplicativo de Ordem de Serviço - Nova Boa Sorte",
  "main": "electron-main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64",
    "pack": "electron-builder --dir --win --x64"
  },
  "build": {
    "appId": "com.novaboasorte.ordem-servico",
    "productName": "Nova Boa Sorte - Ordem de Serviço",
    "files": ["**/*"],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "perMachine": false,
      "createDesktopShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  }
}